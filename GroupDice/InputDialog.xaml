<Window x:Class="GroupDice.InputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GroupDice"
        mc:Ignorable="d"
        Title="InputDialog" Height="162.072" Width="359.959" ResizeMode="NoResize" ShowInTaskbar="False" Topmost="True">
    <Grid>
        <Label x:Name="MessageLabel" Content="Message Label" HorizontalAlignment="Left" Margin="34,10,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="InputBox" HorizontalAlignment="Left" Height="23" Margin="34,52,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="286" KeyDown="InputBox_KeyDown"/>
        <Button x:Name="OkButton" Content="Ok" HorizontalAlignment="Left" Margin="34,96,0,0" VerticalAlignment="Top" Width="75" Click="OkButton_Click"/>
        <Button x:Name="CancelButton" Content="Cancel" HorizontalAlignment="Left" Margin="245,96,0,0" VerticalAlignment="Top" Width="75" Click="CancelButton_Click"/>

    </Grid>
</Window>
